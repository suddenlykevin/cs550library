#:kivy 2.2.0

<fileChooser>:
	BoxLayout:
		orientation: 'vertical'
		padding: 20
		spacing: 10
		BoxLayout:
			TabbedPanel:
				tab_pos: "top_right"
				default_tab_text: "List View"
				default_tab_content:
		list_view_tab:
			TabbedPanelHeader:
				text: 'Icon View'
				content: icon_view_tab
			FileChooserListView:
				id: list_view_tab
			FileChooserIconView:
				id: icon_view_tab
				showhidden: True

<rgbSliders>:
	BoxLayout:
	orientation: 'vertical'
	padding: 20
	spacing: 10
	Slider:
		id: s1
	Label:
		text: '{}'.format(s1.value)
	Slider:
		id: s2
	Label:
		text: '{}'.format(s2.value)
	Slider:
		id: s3
	Label:
		text: '{}'.format(s3.value)

